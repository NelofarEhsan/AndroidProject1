<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".HomeFragment">

    <!-- Header -->
    <TextView
        android:id="@+id/header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/good_morning"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Featured Coffee Section -->
    <TextView
        android:id="@+id/featured_coffee_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/featured_products"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <!-- Coffee Item 1 -->
        <LinearLayout
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_shape"
                android:gravity="center">

                <ImageView
                    android:id="@+id/coffee_image_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/coffee_image_1" />
            </FrameLayout>

            <TextView
                android:id="@+id/coffee_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/beef_burger"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/coffee_1_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_4_99"
                android:textSize="14sp" />

            <Button
                android:id="@+id/order_button_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/order_now" />
        </LinearLayout>

        <!-- Coffee Item 2 -->
        <LinearLayout
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_shape"
                android:gravity="center">

                <ImageView
                    android:id="@+id/coffee_image_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/coffee_image_2" />
            </FrameLayout>

            <TextView
                android:id="@+id/coffee_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/fillet_burger"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/coffee_2_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_3_99"
                android:textSize="14sp" />

            <Button
                android:id="@+id/order_button_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/order_now" />
        </LinearLayout>

        <!-- Coffee Item 3 -->
        <LinearLayout
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_shape"
                android:gravity="center">

                <ImageView
                    android:id="@+id/coffee_image_3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/coffee_image_3" />
            </FrameLayout>

            <TextView
                android:id="@+id/coffee_name_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/vegan_burger"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/coffee_3_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_4_99"
                android:textSize="14sp" />

            <Button
                android:id="@+id/order_button_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/order_now" />
        </LinearLayout>
    </LinearLayout>

    <!-- Additional Coffee Options -->
    <TextView
        android:id="@+id/other_coffees_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="8dp"
        android:text="@string/more_products"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:layout_margin="5dp"
        android:id="@+id/coffee_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="1dp" />
</LinearLayout>
